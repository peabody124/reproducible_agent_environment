{
  "description": "RAE hooks: load coding guidelines at session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/load-guidelines.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
