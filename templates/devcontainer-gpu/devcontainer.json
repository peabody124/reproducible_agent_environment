{
  "name": "Python Development (GPU)",

  "image": "nvidia/cuda:12.6.0-cudnn-devel-ubuntu24.04",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "installZsh": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached"
  ],

  "onCreateCommand": "sudo apt-get update && sudo apt-get install -y libgl1 libglib2.0-0 git-lfs && sudo rm -rf /var/lib/apt/lists/* && (git lfs install || true)",
  "postCreateCommand": "pip install -e '.[dev]' && curl -fsSL https://raw.githubusercontent.com/peabody124/reproducible_agent_environment/${RAE_VERSION:-main}/scripts/install-user.sh | bash",

  "containerEnv": {
    "RAE_VERSION": "main",
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude",
    "ENABLE_LSP_TOOL": "1",
    "CUDA_DEVICE_ORDER": "PCI_BUS_ID"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "ms-toolsai.jupyter",
        "github.copilot"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "none",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true
        },
        "ruff.format.args": [],
        "ruff.lint.args": [],
        "editor.rulers": [120],
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.detectIndentation": false,
        "python.testing.pytestPath": "/usr/local/bin/pytest",
        "python.testing.pytestEnabled": true
      }
    }
  },

  "runArgs": ["--env-file", ".env", "--gpus", "all"],

  "remoteUser": "vscode"
}
